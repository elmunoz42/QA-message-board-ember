{{#if updateQuestionForm}}
  <form>
    <h1>New Question</h1>
      <div class="form-group">
        <label for="title">Question title:</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Details</label>
        {{input value=body id="body"}}
      </div>
      <button {{action 'update' question}}>Update</button>
  </form>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
