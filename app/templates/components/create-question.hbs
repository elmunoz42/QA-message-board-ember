

{{#if addNewQuestion}}
<div class="jumbotron">
  <form>
    <h3>New Question</h3>
      <div class="form-group">
        <label for="title">Question title:</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Details</label>
        {{input value=body id="body"}}
      </div>
      <button class="btn btn-success" {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}

  <button class="btn btn-success" {{action 'questionFormShow'}}>New Question</button>

{{/if}}
